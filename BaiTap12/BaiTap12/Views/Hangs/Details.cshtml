@model BaiTap12.Models.Hang

@{
    ViewBag.Title = "Details";
}

<h2>Thồn tin chi tiết - Nguyễn Thị Hương</h2>

<div>
    <h4>Hang</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên NCC
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nha_CC.TenNCC)
        </dd>

        <dt>
            Tên hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenHang)
        </dd>

        <dt>
            Giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gia)
        </dd>

        <dt>
            Lượng có
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LuongCo)
        </dd>

        <dt>
            Mô tả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MoTa)
        </dd>

        <dt>
            Chiết khấu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ChietKhau)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            @{
                // Lấy đường dẫn file ảnh
                string ImagePath = "~/wwwroot/Images/" + Model.HinhAnh;

            }
            <img src="@Url.Content(ImagePath)" width="100" class="img-thumbnail" />
            <br />
            @Html.HiddenFor(modelItem => Model.HinhAnh)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.MaHang }) |
    @Html.ActionLink("Quay lại", "Index")
</p>
