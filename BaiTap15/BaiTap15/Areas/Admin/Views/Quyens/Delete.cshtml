@model BaiTap15.Models.Quyen

@{
    ViewBag.Title = "Delete";
    ViewBag.HoatDong = "Xóa Quyền";
}
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        <strong>TÊN BẢNG</strong>
    </div>
    <div class="card-body">
        <div class="alert alert-primary" role="alert">
            <h4>Bạn có chắc muốn xóa bản ghi này không?</h4>
        </div>
        <div class="form-group">
            <label for="hoten">Tên quyền</label>
            @Html.EditorFor(model => model.TenQuyen, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <a href="@Url.Action("Index","Quyens")" class="btn btn-link" role="button"><i class="fas fa-undo mr-1"></i>Hủy bỏ</a>
            <button class="btn btn-link" type="submit"><i class="fas fa-save mr-1"></i>Xóa</button>
        }

        <br />

        @if (ViewBag.Errorr != null)
        {
            <br />

            <div class="alert alert-danger" role="alert">
                @ViewBag.Errorr
            </div>
        }
    </div>
</div>


