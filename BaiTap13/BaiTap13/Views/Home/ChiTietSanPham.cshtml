@model BaiTap13.Models.Hang

<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- Product main img -->
            <div class="col-md-5 col-md-push-2">
                <div id="product-main-img">
                    <div class="product-preview">
                        @{ //Lấy đường dẫn file ảnh
                            string ImagePath = "~/wwwroot/images/" + Model.HinhAnh; }

                        <img src="@Url.Content(ImagePath)" alt=""/>
                        
                    </div>

                </div>
            </div>
            <!-- /Product main img -->
            <!-- Product thumb imgs -->
            <div class="col-md-2  col-md-pull-5">
                <div id="product-imgs">
                    <div class="product-preview">
                      

                        <img src="@Url.Content(ImagePath)" alt="" />
                    </div>

                    <div class="product-preview">
                        

                        <img src="@Url.Content(ImagePath)" alt=""/>
                    </div>

                    <div class="product-preview">
                        <img src="@Url.Content(ImagePath)" alt="" />
                    </div>
                </div>
            </div>
            <!-- /Product thumb imgs -->
            <!-- Product details -->
            <div class="col-md-5">
                <div class="product-details">
                    <h2 class="product-name">@Html.DisplayFor(model => model.TenHang)</h2>
                    <div>
                        <div class="product-rating">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-o"></i>
                        </div>
                        <a class="review-link" href="#">10 yêu thích | Chọn yêu thích</a>
                    </div>
                    <br />
                    <div>
                        <h3 class="product-price">@Html.DisplayFor(model => model.Gia) VND</h3>

                        @{ 
                            string tinhtrang = "";
                            if(Model.LuongCo > 0) { tinhtrang = "Còn hàng";  }
                            else { tinhtrang = "Hết hàng";  }


                           }
                        <span class="product-available"> @tinhtrang </span>
                       
                    </div>
                    <br />
                    <br />
                    <div class="add-to-cart">
                        <div class="qty-label">
                            Số lượng
                            <div class="input-number">
                                <input type="number">
                                <span class="qty-up">+</span>
                                <span class="qty-down">-</span>
                            </div>
                        </div>
                        <button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> Thêm vào giỏ</button>
                    </div>
                    <ul class="product-links">
                        <li>Thuộc danh mục:</li>
                        <li><a href="#">Headphones</a></li>
                    </ul>

                    <ul class="product-links">
                        <li>Chia sẻ:</li>
                        <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                        <li><a href="#"><i class="fa fa-envelope"></i></a></li>
                    </ul>

                </div>
            </div>
            <!-- /Product details -->
            <!-- Product tab -->
            <div class="col-md-12">
                <div id="product-tab">
                    <!-- product tab nav -->
                    <ul class="tab-nav">
                        <li class="active"><a data-toggle="tab" href="#tab1">Mô tả chi tiết</a></li>
                    </ul>
                    <!-- /product tab nav -->
                    <!-- product tab content -->
                    <div class="tab-content">
                        <!-- tab1  -->
                        <div id="tab1" class="tab-pane fade in active">
                            <div class="row">
                                <div class="col-md-12">
                                    <p> @Html.DisplayFor(model => model.MoTa)</p>
                                </div>
                            </div>
                        </div>
                        <!-- /tab1  -->
                    </div>
                    <!-- /product tab content  -->
                </div>
            </div>
            <!-- /product tab -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>



