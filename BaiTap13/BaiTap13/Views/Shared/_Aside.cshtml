
@model IEnumerable<BaiTap13.Models.Hang>

<div id="aside" class="col-md-3">
    <!-- aside Widget -->
    <div class="aside">
        <h3 class="aside-title">Sản phẩm bán chạy</h3>

        @foreach (var item in Model)
        {
            <div class="product-widget">
                <div class="product-img">
                    @{ //Lấy đường dẫn file ảnh
                        string ImagePath = "~/wwwroot/images/" + item.HinhAnh; }

                    <img src="@Url.Content(ImagePath)" alt="" width="60" height="60" />
                </div>
                <div class="product-body">
                    <p class="product-category"> @Html.DisplayFor(modelItem => item.Nha_CC.TenNCC)</p>
                    <h3 class="product-name"><a href="product.html">@Html.DisplayFor(modelItem => item.TenHang)</a></h3>
                    <h4 class="product-price">@Html.DisplayFor(modelItem => item.Gia) VND </h4>
                 </div>
            </div>
        }


    </div>
    <!-- /aside Widget -->
</div>
