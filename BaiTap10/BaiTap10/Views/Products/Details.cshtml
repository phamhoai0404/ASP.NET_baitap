        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Vintage)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Vintage)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Image)
        </dt>

        <dd>
            @{
                string imagePath = "";
                if (Model.Image != null)
                {
                    imagePath = "~/wwwroot/WineImages/" + Model.Image;
                }
                else { imagePath = "~/wwwroot/WineImages/no-image-news.png"; }


            }
            <img src="@Url.Content(imagePath)" width="100px" class="img-thumbnail" />
            <br />
            
            @Html.DisplayFor(model => model.Image)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Region)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Region)
        </dd>

    </dl>
