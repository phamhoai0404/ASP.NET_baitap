@model BaiTap12_2.Models.Hang

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chi tiết hàng</h2>

<div>
    <h4>Hang</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Tên nhà cung cấp
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nha_CC.TenNCC)
        </dd>

        <dt>
            Tên hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenHang)
        </dd>

        <dt>
            Giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gia)
        </dd>

        <dt>
            Số lượng có
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LuongCo)
        </dd>

        <dt>
            Mô tả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MoTa)
        </dd>

        <dt>
            Chiết khấu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ChietKhau)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            @{
                string ImagePath = "";
                if (Model.HinhAnh != null) { ImagePath = "~/wwwroot/Images/" + Model.HinhAnh; }
                else { ImagePath = "~/wwwroot/Images/no-image-news.png"; }
            }
            <img src="@Url.Content(ImagePath)" width="100" class="img-thumbnail" />
            <br />
            @Html.DisplayFor(modelItem => Model.HinhAnh)

        </dd>

    </dl>
</div>
<p>
    
    @Html.ActionLink("Quay lại danh sách", "Index")
</p>
